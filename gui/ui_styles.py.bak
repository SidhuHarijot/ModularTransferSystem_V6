import tkinter as tk
from tkinter import ttk

# GLOBAL CONSTANTS (Restored for MainWindow compatibility)
BG_DARK = "#0a0a0a"
BG_PANEL = "#111111"
ACCENT = "#00ff9d"
TEXT_MAIN = "#ffffff"
TEXT_DIM = "#888888"

def apply_styles(root):
    style = ttk.Style()
    style.theme_use('clam')
    
    # Treeview Main Configuration
    style.configure("Treeview", 
        background="#000000", 
        foreground="#ffffff", 
        fieldbackground="#000000",
        rowheight=28,
        font=("Segoe UI", 10))
    
    # Selection Mapping
    style.map("Treeview", 
        foreground=[('selected', '#000000')],
        background=[('selected', ACCENT)])
        
    style.configure("Treeview.Heading", 
        background="#333333", 
        foreground="#ffffff", 
        relief="flat",
        font=("Segoe UI", 10, "bold"))

    # Progressbar Style
    style.configure("TProgressbar", thickness=10, troughcolor="#111", background=ACCENT)